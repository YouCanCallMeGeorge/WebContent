@using WebContent.Manage.HelperClasses;
@using WebContent.UI.Models.Home;
@model HomeViewModel

<div class="row">
    <div class="col-md-4">
        <div class="row">
            <h2>Home</h2>
            <h3>Why this website?</h3>
            <p>
                This website chronicles my deep dive into current web programming tools and practices.
            </p>
            <p><a class="btn btn-default" href="/Node/BlogMostRecent">Go To Blog</a></p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <h2>Book</h2>
            <br/>
            <p>Placeholder for book content.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <h2>Recent Blog Posts</h2>
            @if (Model.RecentLinks != null)
            {
                foreach (ContentLinkInfo linkInfo in Model.RecentLinks)
                {
                    <div class="row">
                        <a href="/Node/Display/@linkInfo.Url">@linkInfo.Text</a>
                        <p>@linkInfo.Summary</p>
                    </div>
                }
            }
        </div>
    </div>
</div>
